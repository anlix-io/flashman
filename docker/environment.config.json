{
  "apps": [{
      "name": "flashman",
      "script": "bin/www",
      "log_date_format": "YYYY-MM-DD HH:mm Z",
      "autorestart": true,
      "env": {
        "production": true,
        "TZ": "America/Sao_Paulo",
        "FLM_CONCURRENT_UPDATES_LIMIT": 50
      },
      "error_file": "/dev/stderr",
      "out_file": "/dev/stdout",
      "exec_mode": "cluster"
    }]
}
