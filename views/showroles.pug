extends layout

block stylesheets
  link(rel='stylesheet', href='/scripts/datatables.net-bs4/css/dataTables.bootstrap4.min.css')

block content
  .row.justify-content-center
    .col-12.col-lg-8.mt-5
      .card
        h4.card-header.teal.lighten-2.white-text(id="card-header",
                                                  data-toggle="collapse",
                                                  data-target="#new-role-card",
                                                  style="cursor: pointer;")
          .row
            .col-1
              .fas.fa-plus
            .col-10.text-center
              span.card-title Adicionar nova classe de permissões
        .card-body.collapse.out(id="new-role-card")
          form.needs-validation(
            id="new-role-form",
            method='post',
            action='/user/role/new',
            novalidate
          )
            .row
              .col
                .md-form.input-entry
                  label Nome da classe
                  input.form-control(type="text",
                                     name="name",
                                     required)
                  .invalid-feedback Por favor, preencha este campo
            .row
              .col-12.col-lg-6
                .md-form
                  .md-selectfield.form-control.my-0
                    label Informações do WiFi
                    select.browser-default.md-select(name="grant-wifi-info")
                      option(value=0) Não visualizar
                      option(value=1) Visualizar
                      option(value=2) Visualizar e editar
                .md-form
                  .md-selectfield.form-control.my-0
                    label Informações do PPPoE
                    select.browser-default.md-select(name="grant-pppoe-info")
                      option(value=0) Não visualizar
                      option(value=1) Visualizar
                      option(value=2) Visualizar e editar
                .md-form
                  .md-selectfield.form-control.my-0
                    label Visualização de Senhas ao Editar
                    select.browser-default.md-select(name="grant-pass-show")
                      option(value="false") Bloquear
                      option(value="true") Permitir
                .md-form
                  .md-selectfield.form-control.my-0
                    label Controle de Atualização de Firmware
                    select.browser-default.md-select(name="grant-firmware-upgrade")
                      option(value=0) Bloquear
                      option(value=1) Permitir
                      option(value=2) Permitir em massa
                .md-form
                  .md-selectfield.form-control.my-0
                    label Controle do Tipo de Conexão
                    select.browser-default.md-select(name="grant-wan-type")
                      option(value="false") Bloquear
                      option(value="true") Permitir
                .md-form
                  .md-selectfield.form-control.my-0
                    label Controle de Identificação do Roteador
                    select.browser-default.md-select(name="grant-device-id")
                      option(value="false") Bloquear
                      option(value="true") Permitir
                .md-form
                  .md-selectfield.form-control.my-0
                    label Controle de Ações no Roteador
                    select.browser-default.md-select(name="grant-device-actions")
                      option(value="false") Bloquear
                      option(value="true") Permitir
                .md-form
                  .md-selectfield.form-control.my-0
                    label Controle da rede LAN
                    select.browser-default.md-select(name="grant-lan-edit")
                      option(value="false") Visualizar
                      option(value="true") Visualizar e editar
                .md-form
                  .md-selectfield.form-control.my-0
                    label Controle de bloqueio de Internet nos dispositivos
                    select.browser-default.md-select(name="grant-lan-devices-block")
                      option(value="false") Bloquear
                      option(value="true") Permitir
                .md-form
                  .md-selectfield.form-control.my-0
                    label Controle de Modo de Operação
                    select.browser-default.md-select(name="grant-opmode-edit")
                      option(value="false") Visualizar
                      option(value="true") Visualizar e editar
                .md-form
                  .md-selectfield.form-control.my-0
                    label Acesso ao App do Técnico
                    select.browser-default.md-select(name="grant-diag-app-access")
                      option(value="false") Bloquear
                      option(value="true") Permitir
                .md-form
                  .md-selectfield.form-control.my-0
                    label Acesso às Certificações de Roteadores
                    select.browser-default.md-select(name="grant-certification-access")
                      option(value=0) Não visualizar
                      option(value=1) Visualizar
                      option(value=2) Visualizar e editar
                .md-form
                  .md-selectfield.form-control.my-0
                    label Busca de roteadores
                    select.browser-default.md-select(name="grant-search-level")
                      option(value=0) Não permitir busca e visualização
                      option(value=1) Busca simples
                      option(value=2) Busca completa com filtros especiais
                .md-form
                  .md-selectfield.form-control.my-0
                    label Controle de Atualização de Firmware Beta
                    select.browser-default.md-select(name="grant-firmware-beta-upgrade")
                      option(value="false") Bloquear
                      option(value="true") Permitir
                .md-form
                  .md-selectfield.form-control.my-0
                    label Controle de Atualização de Firmware Restrita
                    select.browser-default.md-select(name="grant-firmware-restricted-upgrade")
                      option(value="false") Bloquear
                      option(value="true") Permitir
              .col-12.col-lg-6
                .md-form
                  .md-selectfield.form-control.my-0
                    label Acesso aos Logs dos Roteadores
                    select.browser-default.md-select(name="grant-log-access")
                      option(value="false") Bloquear
                      option(value="true") Permitir
                .md-form
                  .md-selectfield.form-control.my-0
                    label Remoção de Registro de Roteador
                    select.browser-default.md-select(name="grant-device-removal")
                      option(value=0) Bloquear
                      option(value=1) Permitir
                      option(value=2) Permitir em massa
                .md-form
                  .md-selectfield.form-control.my-0
                    label Adição de Registro de Roteador
                    select.browser-default.md-select(name="grant-device-add")
                      option(value="false") Bloquear
                      option(value="true") Permitir
                .md-form
                  .md-selectfield.form-control.my-0
                    label Configurar as Medições de Dispositivos
                    select.browser-default.md-select(name="grant-monitor-manage")
                      option(value="false") Bloquear
                      option(value="true") Permitir
                .md-form
                  .md-selectfield.form-control.my-0
                    label Controle de Gerência de Firmwares
                    select.browser-default.md-select(name="grant-firmware-manage")
                      option(value="false") Bloquear
                      option(value="true") Permitir
                .md-form
                  .md-selectfield.form-control.my-0
                    label Controle de Gerência de Usuários
                    select.browser-default.md-select(name="grant-user-manage")
                      option(value="false") Bloquear
                      option(value="true") Permitir
                .md-form
                  .md-selectfield.form-control.my-0
                    label Controle de Configurações do Flashman
                    select.browser-default.md-select(name="grant-flashman-manage")
                      option(value="false") Bloquear
                      option(value="true") Permitir
                .md-form
                  .md-selectfield.form-control.my-0
                    label Permitir Acesso a API REST
                    select.browser-default.md-select(name="grant-api-access")
                      option(value="false") Bloquear
                      option(value="true") Permitir
                .md-form
                  .md-selectfield.form-control.my-0
                    label Mostrar Alertas em Roteadores
                    select.browser-default.md-select(name="grant-notification-popups")
                      option(value="true") Permitir
                      option(value="false") Bloquear
                .md-form
                  .md-selectfield.form-control.my-0
                    label Informações Sobre Dispositivos Conectados
                    select.browser-default.md-select(name="grant-lan-devices")
                      option(value=0) Não visualizar
                      option(value=1) Visualizar
                      option(value=2) Visualizar e realizar ações
                .md-form
                  .md-selectfield.form-control.my-0
                    label Informações sobre Redes ao Redor
                    select.browser-default.md-select(name="grant-site-survey")
                      option(value="false") Bloquear
                      option(value="true") Permitir
                .md-form
                  .md-selectfield.form-control.my-0
                    label Informações Sobre Medição de Velocidade
                    select.browser-default.md-select(name="grant-measure-devices")
                      option(value=0) Não visualizar
                      option(value=1) Visualizar
                      option(value=2) Visualizar e realizar ações
                .md-form
                  .md-selectfield.form-control.my-0
                    label Exportação de cadastros por CSV
                    select.browser-default.md-select(name="grant-csv-export")
                      option(value="false") Bloquear
                      option(value="true") Permitir
                .md-form
                  .md-selectfield.form-control.my-0
                    label Acesso a gráficos de tráfego na WAN
                    select.browser-default.md-select(name="grant-wan-bytes")
                      option(value="false") Bloquear
                      option(value="true") Permitir
                .md-form
                  .md-selectfield.form-control.my-0
                    label Total sobre status de roteadores
                    select.browser-default.md-select(name="grant-search-summary")
                      option(value="false") Não visualizar
                      option(value="true") Visualizar
            .row
              .col.text-center
                .form-buttons
                  button.btn.btn-primary(type="submit")
                    .fas.fa-check.fa-lg
                    span &nbsp Adicionar
  .card.mt-4.mb-4
    h4.card-header.teal.lighten-2.white-text
      .fas.fa-address-card.fa-lg
      span &nbsp Classes de permissões
    .card-body
      h3#loading-roles.text-center
        i.fas.fa-spinner.fa-pulse.fa-2x.grey-text
      #roles-table-wrapper.table-responsive(style="display: none;")
        .text-right.mb-4
          .btn-group(role="group")
            button.btn.btn-danger(type="button" id="btn-roles-trash")
              .fas.fa-trash.fa-lg
        table#roles-table.table
          thead
            tr
              th.col-xs-1
                input.checkbox(type="checkbox" id="checkall")
              th.text-center Nome da Classe
              th
          tbody#roles-table-content

block scripts
  script(src='/javascripts/showroles_actions.js')
