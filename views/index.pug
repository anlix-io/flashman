extends layout

block content
  if ! devices || devices.length == 0
    h3.text-center Nenhum dispositivo registrado
  else
    table.table.table-responsive.devices-table
      tr
        th #
        th Identificação
        th Modelo
        th Versão
        th IP
        th
      each device, index in devices
        tr(id=device._id)
          td.col-xs-1=index + 1
          td.col-xs-3
            | #{device._id}
          td.col-xs-2
            | #{device.model}
          td.col-xs-2
            | #{device.version}
          td.col-xs-2
            | #{device.ip}
          td.col-xs-2
            a.edit.pull-right.btn.btn-sm.btn-primary.spaced-btn(href="/devices/edit/" + device._id)
              span.hidden-xs Editar&nbsp;
              span.glyphicon.glyphicon-pencil
