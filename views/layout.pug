doctype html
html
  head
    meta(name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no")
    title Flashman

    script(defer, src="https://use.fontawesome.com/releases/v5.0.8/js/all.js")

    link(rel='stylesheet', href='/scripts/bootstrap/css/bootstrap.min.css')
    link(rel='stylesheet', href='/scripts/mdbootstrap/css/mdb.min.css')
    link(rel='stylesheet', href='/scripts/tags-input/tags-input.css')
    link(rel='stylesheet', href='/stylesheets/style.css')
    block stylesheets

  body
    include includes/navbar
    .container
      include includes/flash
      include includes/configflashman
      block content
    p.version-label 1.9.0

    script(src='/scripts/jquery/jquery.min.js')
    script(src='/scripts/jquery-mask/jquery.mask.min.js')
    script(src='/scripts/popper/umd/popper.min.js')
    script(src='/scripts/bootstrap/js/bootstrap.min.js')
    script(src='/scripts/mdbootstrap/js/mdb.min.js')
    script(src='/scripts/sweetalert2/sweetalert2.all.min.js')
    script(src='/javascripts/modal_actions.js')
    script(src='/javascripts/upgrade_flashman.js')
    script.
      let message = '#{message}';
      if (message) {
        $('#frame-modal-alert').modal('show');
      }
      let superuser = '#{superuser}';
      let update = '#{update}' === "true";
      if (superuser && update && Math.random() < 0.3) {
        alertUpdateFlashman();
      }

    block scripts
