#speed-test.modal.fade(tabindex="-1", role="dialog")
  .modal-dialog.modal-notify.modal-teal.modal-lg(role="document")
    .modal-content
      .modal-header
        p.heading.lead
          span.fas.fa-tachometer-alt.fa-lg
          strong &nbsp; Teste de Velocidade de Download para&nbsp;
            label(name="speed-test-hlabel" id="speed-test-hlabel")
        button.close(type="button", data-dismiss="modal")
          span.white-text &times;
      .modal-body
        if (superuser || (role && role.grantMeasureDevices > 1))
          .border.row.pl-2.pr-2.pt-3.pb-3.ml-0.mr-0
            .col-1
              #measure-test-arrow.fas.fa-chevron-up.fa-lg.mt-1.text-primary
            .col-11
              h5 Realizar Teste de Velocidade
          #measure-test-div.pl-2.pr-2.grey.lighten-5.border
            .row.mt-4
              .col
                h2#speed-test-placeholder.text-center.grey-text.mb-3
                  i.fas.fa-tachometer-alt.fa-3x
                  br
                  br
                  span Clique no botão abaixo para começar a medição
                h2#speed-test-waiting.text-center.grey-text.mb-3(style="display: none;")
                  i.fas.fa-spinner.fa-pulse.fa-3x
                  br
                  br
                  span Aguardando resposta do roteador...
                h2#speed-test-error.text-center.mb-3.grey-text(style="display: none;")
                  i.fas.fa-times.fa-3x
                  br
                  br
                  span Falha na medição, por favor tente novamente
                h2#speed-test-result.text-center.mb-3(style="display: none;")
                  i.fas.fa-check.fa-3x.grey-text
                  br
                  br
                  span.grey-text Velocidade medida:&nbsp;
                  strong#speed-test-result-download 96.5 Mbps
            .row
              .col.p-0.text-center.mb-4
                button.btn.btn-primary.btn-start-speed-test(type="button")
                  span &nbsp; Iniciar teste
        .border.row.pl-2.pr-2.pt-3.pb-3.ml-0.mr-0
          .col-1
            if (superuser || (role && role.grantMeasureDevices > 1))
              #measure-previous-arrow.fas.fa-chevron-down.fa-lg.mt-1
            else
              #measure-previous-arrow.fas.fa-chevron-up.fa-lg.mt-1.text-primary
          .col-11
            h5 Ver Resultados das Últimas Medições
        #measure-previous-div.pl-2.pr-2.grey.lighten-5.border
          h3#measure-previous-nodata.grey-text.text-center.my-3(style="display: none;") Não há medições registradas
          .table-responsive
            table.table.text-center
              thead
                tr
                  th Velocidade Download
                  th Data da Medição
                  th Usuário
              tbody#measure-previous-data
