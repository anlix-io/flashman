
#site-survey.modal.fade(tabindex="-1", role="dialog")
  .modal-dialog.modal-notify.modal-teal.modal-lg(role="document")
    .modal-content
      .modal-header
        p#isBridgeDiv.d-none
        p.heading.lead
          span.fas.fa-wifi.fa-lg
          strong &nbsp;Redes ao redor de&nbsp;
            label(name="site-survey-hlabel" id="site-survey-hlabel")
        button.close(type="button", data-dismiss="modal")
          span.white-text &times;
      .modal-body.pt-2
        .row
          .col.p-0.text-right
            button.btn.btn-primary.btn-sm.m-1.btn-sync-ssurvey
              i.fas.fa-sync-alt.fa-lg
              span &nbsp Atualizar
        .row.pt-3#site-survey-placeholder
          .col
            h2.text-center.grey-text.mb-3
              i.fas.fa-spinner.fa-pulse.fa-4x
              br
              br
              span Atualizando roteadores ao redor...
              br
              span#site-survey-placeholder-counter 0 de 1
        .row#site-survey-placeholder-none
          .col
            h2.text-center.grey-text.mb-3
              i.fas.fa-wifi.fa-4x
              br
              br
              span Nenhum Roteador encontrado
        .row#site-survey-body
