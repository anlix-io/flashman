
#open-firewall-ports.modal.fade(tabindex="-1", role="dialog")
  .modal-dialog.modal-notify.modal-teal.modal-lg(role="document")
    .modal-content
      .modal-header
        p.heading.lead
          span.fas.fa-lock-open.fa-lg
          strong &nbsp; Abertura de portas no roteador &nbsp;
            label(name="openfirewallRouterid_label" id="openfirewallRouterid_label")
        button.close(type="button", data-dismiss="modal")
          span.white-text &times;
      .modal-body
        .row
          .col
            .row
              .col-6 
                span Dispositivo
              .col-3
                span Portas Dispon√≠veis
              .col-1
                span DMZ
              .col-2
                span &nbsp
            .row
              .col-6
                .input-group
                  select.form-control#openFirewallPortsMac
                  .input-group-append
                    button.btn.btn-sm.my-0.teal.lighten-2.btn-syncOnlineDevs(type="button")
                      .fas.fa-sync-alt.fa-lg
              .col-3
                select.form-control#openFirewallPortsPorts(Multiple)
                  option(value="20") FTP Dados
                  option(value="21") FTP Controle 
                  option(value="22") Secure Shell (SSH) 
              .col-1
                label.switch
                  input.checkbox#openFirewallPortsDMZ(type="checkbox" checked=true)
                  .slider.round
              .col-2.text-right
                button.btn.btn-sm.my-0.teal.lighten-2.btn-openFirewallPortsSaveRule(type="button")
                  .fas.fa-plus.fa-lg
        .row
          .col-12
            ul.list-group#openFirewallPortsRules
              li.list-group-item.d-flex.justify-content-between
                span TESTE Mais teste
                span.pull-right.button-group
                  a.badge.teal.lighten-2.openFirewallPortsRemoveRule
                    span del
        input#openFirewallPortsFinalRules(type="hidden")
        input#openFirewallPortsFinalRulesChanged(type="hidden")
      .modal-footer 
        .btn-group.btn-group-sm(role="group")
            button.btn.teal.lighten-2.btn-sm.btn-openFirewallPorts(type="button")
              span &nbsp Aplicar